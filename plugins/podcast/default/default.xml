<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="podcast">
	<name>plg_podcast_default</name>
	<author>Podcast Suite</author>
	<creationDate>February 2012</creationDate>
	<copyright>Copyright (C) 2011-2012</copyright>
	<license>GNU General Public License version 2</license>
	<authorEmail>joe@corywebbmedia.com</authorEmail>
	<authorUrl>podcastsuite.com</authorUrl>
	<version>2.0</version>
	<description>A plugin designed for handling local storage of podcast assets.</description>
	<files>
		<filename plugin="default">default.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
                <field name="folder" type="text" value="media/podcasts/" label="Default Folder" />
			</fieldset>
		</fields>
	</config>
</extension>
