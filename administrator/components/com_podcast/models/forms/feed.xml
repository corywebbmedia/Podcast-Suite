<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="top-col-1">
		<field name="feed_title"
			type="text"
			label="COM_PODCAST_FEED_TITLE"
			description="COM_PODCAST_FEED_TITLE_DESC"
			required="true"
            size="50"
			default="" />

		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
            size="50"
			default=""/>

		<field name="feed_subtitle"
			type="text"
			label="COM_PODCAST_FEED_SUBTITLE"
			description="COM_PODCAST_FEED_SUBTITLE_DESC"
            size="50"
			required="true"
			default="" />

		<field name="feed_image"
			type="media"
			label="COM_PODCAST_FEED_IMAGE"
			description="COM_PODCAST_FEED_IMAGE_DESC"
            size="50"
			required="true"
			default="" />
	</fieldset>

	<fieldset name="top-col-2">
		<field name="feed_category1"
			type="itunescategory"
			label="COM_PODCAST_FEED_ITUNES_CATEGORY_1"
			description="COM_PODCAST_FEED_ITUNES_CATEGORY_DESC"
			default="">
		</field>
		<field name="feed_category2"
			type="itunescategory"
			label="COM_PODCAST_FEED_ITUNES_CATEGORY_2"
			description="COM_PODCAST_FEED_ITUNES_CATEGORY_DESC"
			default="">
		</field>
		<field name="feed_category3"
			type="itunescategory"
			label="COM_PODCAST_FEED_ITUNES_CATEGORY_3"
			description="COM_PODCAST_FEED_ITUNES_CATEGORY_DESC"
			default="">
		</field>
	</fieldset>

	<fieldset name="right">
		<field name="published"
			type="radio"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			default="0">
			<option value="0">JENABLED</option>
			<option value="1">JDISABLED</option>
		</field>

		<field name="feed_default"
			type="radio"
			label="COM_PODCAST_FEED_DEFAULT"
			description="COM_PODCAST_FEED_DEFAULT_DESC"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="feed_created"
			type="calendar"
			label="COM_PODCAST_FEED_CREATED"
			description="COM_PODCAST_FEED_CREATED_DESC"
			default="" />

		<field name="feed_link"
			type="text"
			label="COM_PODCAST_FEED_LINK"
			description="COM_PODCAST_FEED_LINK_DESC"
            size="50"
			required="true"
			default=""/>

		<field name="feed_copyright"
			type="text"
			label="COM_PODCAST_FEED_COPYRIGHT"
			description="COM_PODCAST_FEED_COPYRIGHT_DESC"
            size="50"
			required="true"
			default=""/>

		<field name="feed_author"
			type="text"
			label="COM_PODCAST_FEED_AUTHOR"
			description="COM_PODCAST_FEED_AUTHOR_DESC"
            size="50"
			required="true"
			default=""/>

		<field name="feed_keywords"
			type="text"
			label="COM_PODCAST_FEED_KEYWORDS"
			description="COM_PODCAST_FEED_KEYWORDS_DESC"
            size="50"
			required="true"
			default=""/>

		<field name="feed_owner_name"
			type="text"
			label="COM_PODCAST_FEED_OWNER_NAME"
			description="COM_PODCAST_FEED_OWNER_NAME_DESC"
            size="50"
			required="true"
			default=""/>

		<field name="feed_owner_email"
			type="text"
			label="COM_PODCAST_FEED_OWNER_EMAIL"
			description="COM_PODCAST_FEED_OWNER_EMAIL_DESC"
            size="50"
			required="true"
			default=""/>

		<field name="feed_new_feed_url"
			type="text"
			label="COM_PODCAST_FEED_NEW_URL"
			description="COM_PODCAST_FEED_NEW_URL_DESC"
            size="50"
			default=""/>

		<field name="feed_block"
			type="radio"
			label="COM_PODCAST_FEED_BLOCK"
			description="COM_PODCAST_FEED_BLOCK_DESC"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="feed_explicit"
			type="radio"
			label="COM_PODCAST_FEED_EXPLICIT"
			description="COM_PODCAST_FEED_EXPLICIT_DESC"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="feed_complete"
			type="radio"
			label="COM_PODCAST_FEED_COMPLETE"
			description="COM_PODCAST_FEED_COMPLETE_DESC"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

	<fieldset name="bottom">
		<field name="feed_summary"
			type="textarea"
			label="COM_PODCAST_FEED_SUMMARY"
			description="COM_PODCAST_FEED_SUMMARY_DESC"
			rows="8"
			default="" />

		<field name="feed_id"
			type="hidden"
			class="readonly"
			readonly="true" />

	</fieldset>
</form>
