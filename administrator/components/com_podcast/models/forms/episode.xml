<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="top-col-1">
		<field name="item_title"
			type="text"
			label="COM_PODCAST_EPISODE_TITLE"
			required="true"
            size="50"
			default="" />

		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
            size="50"
			default=""/>

		<field name="item_subtitle"
			type="text"
			label="COM_PODCAST_EPISODE_SUBTITLE"
			required="true"
            size="50"
			default="" />

		<field name="feed_id"
			type="feed"
			label="COM_PODCAST_FEED"
			required="true"
			default="" />

	</fieldset>

	<fieldset name="top-col-2">
		<field name="item_enclosure_url"
			type="text"
			label="COM_PODCAST_EPISODE_MEDIA"
			required="true"
            size="50"
			default="" />

		<field name="item_enclosure_length"
			type="text"
			label="COM_PODCAST_EPISODE_LENGTH"
			required="true"
            size="50"
			default="" />

		<field name="item_duration"
			type="text"
			label="COM_PODCAST_EPISODE_DURATION"
			required="true"
            size="50"
			default="" />

		<field name="item_enclosure_type"
			type="text"
			label="COM_PODCAST_EPISODE_TYPE"
			required="true"
            size="50"
			default="" />

	</fieldset>

	<fieldset name="right">
		<field name="published"
			type="radio"
			label="JSTATUS"
			required="true"
			default="0">
			<option value="0">JDISABLED</option>
			<option value="1">JENABLED</option>
		</field>

		<field name="item_pubDate"
			type="calendar"
			label="COM_PODCAST_EPISODE_PUBLISHED_DATE"
			default="" />

		<field name="item_created"
			type="calendar"
			label="COM_PODCAST_EPISODE_CREATED_DATE"
			default="" />

		<field name="item_author"
			type="text"
			label="COM_PODCAST_EPISODE_AUTHOR"
			default="" />

		<field name="item_closed_caption"
			type="radio"
			label="COM_PODCAST_EPISODE_CLOSED_CAPTION"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="item_block"
			type="radio"
			label="COM_PODCAST_ITEM_BLOCK"
			default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="item_image"
			type="text"
			label="COM_PODCAST_ITEM_IMAGE"
			default="" />

		<field name="item_guid"
			type="text"
			class="readonly"
			label="COM_PODCAST_EPISODE_GUID"
			size="42"
			default="0"
			readonly="true" />

		<field name="episode_id"
			type="hidden"
			class="readonly"
			readonly="true" />
            
        <field name="item_assets"
            type="extraassets"
            label="COM_PODCAST_EPISODE_EXTRA_ASSETS" />

	</fieldset>

	<fieldset name="bottom">

		<field name="item_summary"
			type="textarea"
			label="COM_PODCAST_EPISODE_SUMMARY"
			rows="8"
			default="" />

	</fieldset>
</form>
